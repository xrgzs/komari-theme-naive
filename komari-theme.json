{
  "name": "Komari Naive",
  "short": "Naive",
  "description": "A naive-ui theme for Komari",
  "version": "1.0.1",
  "author": "lyimoexiao",
  "url": "https://github.com/lyimoexiao/komari-theme-naive",
  "preview": "preview.png",
  "configuration": {
    "type": "managed",
    "name": "Naive 设置",
    "data": [
      { "name": "数据刷新设置", "type": "title" },
      { "key": "dataUpdateInterval", "name": "数据更新间隔", "type": "number", "default": 3, "help": "实时数据刷新间隔，单位：秒（建议 1-10 秒）" },
      { "name": "RPC 连接设置", "type": "title" },
      { "key": "rpcTransportMode", "name": "RPC 连接模式", "type": "select", "default": "websocket", "options": "websocket,http", "help": "RPC 默认连接模式，推荐使用 websocket，若您无法使用 websocket 请选择 http" },
      { "name": "显示设置", "type": "title" },
      { "key": "defaultViewMode", "name": "默认视图模式", "type": "select", "default": "card", "options": "card,list", "help": "节点列表的默认显示模式" },
      { "key": "showLoginButton", "name": "未登录状态显示登录按钮", "type": "switch", "default": true, "help": "控制未登录状态下是否显示登录按钮" },
      { "name": "亮色模式主题", "type": "title" },
      { "key": "lightPrimaryColor", "name": "主色调", "type": "string", "default": "#18a058", "help": "亮色模式主色调" },
      { "key": "lightPrimaryColorHover", "name": "主色调悬停色", "type": "string", "default": "#36ad6a", "help": "亮色模式按钮悬停颜色" },
      { "key": "lightPrimaryColorPressed", "name": "主色调按下色", "type": "string", "default": "#0c7a43", "help": "亮色模式按钮按下颜色" },
      { "name": "暗色模式主题", "type": "title" },
      { "key": "darkPrimaryColor", "name": "主色调", "type": "string", "default": "#63e2b6", "help": "暗色模式主色调" },
      { "key": "darkPrimaryColorHover", "name": "主色调悬停色", "type": "string", "default": "#7fe7c4", "help": "暗色模式按钮悬停颜色" },
      { "key": "darkPrimaryColorPressed", "name": "主色调按下色", "type": "string", "default": "#5acea7", "help": "暗色模式按钮按下颜色" },
      { "name": "通用设置", "type": "title" },
      { "key": "borderRadius", "name": "圆角大小", "type": "string", "default": "3px", "help": "全局圆角大小（如 3px、0.5rem）" },
      { "key": "fontFamily", "name": "字体", "type": "string", "default": "\"MiSans VF\", sans-serif", "help": "全局字体设置，多个字体用逗号分隔" }
    ]
  }
}
